<% layout('layouts/boilerplate') %>
<h1 class="text-center">New Password</h1>
<form action="/users/resetPassword/<%= token %>" method="POST">
    <div class="mb-3">
        <input
            type="password"
            name="password"
            class="form-control"
            placeholder="Password"
            required
        />
    </div>
    <div class="mb-3">
        <input
            type="password"
            name="passwordConfirm"
            class="form-control"
            placeholder="Confirm Password"
            required
        />
    </div>
    <button type="submit" class="btn btn-danger btn-block">
        Change Password
    </button>
</form>
